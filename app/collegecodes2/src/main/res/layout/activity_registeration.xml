<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registeration_Activity">

    <TextView
        android:id="@+id/edt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tangerine"
        android:text="Register Form"
        android:textSize="30dp"
        android:textColor="#000"
        android:padding="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/edt_fn"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/edt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:background="#92B8B6B6"
        />

    <EditText
        android:id="@+id/edt_ln"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/edt_fn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:background="#92B8B6B6"
        />

    <EditText
        android:id="@+id/edt_en"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/edt_ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enrollment number"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:background="#92B8B6B6"
        />

    <RadioButton
        android:id="@+id/radio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_en"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:imeOptions="actionNext"
        android:inputType=""
        android:padding="10dp"
        android:text="female"
        android:textColorHint="#72000000"

        />
    <RadioButton
        android:id="@+id/radio_btn1"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/radio_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="male"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType=""
        />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/radio_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:background="#92B8B6B6"
        />

    <EditText
        android:id="@+id/edt_pass1"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textColorHint="#72000000"
        android:padding="10dp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:background="#92B8B6B6"
        />

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_pass1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="register"
        android:background="@drawable/btn"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:drawablePadding="10dp"
        />
</RelativeLayout>